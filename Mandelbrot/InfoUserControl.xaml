<UserControl x:Class="Mandelbrot.InfoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mandelbrot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Width="172" Height ="510" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" BorderThickness="1,1,1,1">
            <StackPanel x:Name="StackPanelInfo" Margin="5,0,5,0">
                <Label Content="Region:" HorizontalAlignment="Left" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoRegion" HorizontalAlignment="Stretch" Height="36" Padding="0,2,0,0" FontFamily="Consolas" IsReadOnly="True" Focusable="False"/>
                <Label Content="Implementation:" HorizontalAlignment="Left" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoImplementation" HorizontalAlignment="Stretch" Height="20" IsReadOnly="True"/>
                <Label Content="Threads:" HorizontalAlignment="Left" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoNumTasks" HorizontalAlignment="Stretch" Height="20" IsReadOnly="True"/>
                <Label Content="Image Size (Pixels):" HorizontalAlignment="Left" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoImageSize" HorizontalAlignment="Stretch" Height="20"  IsReadOnly="True"/>
                <Label Content="Elapsed Time:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoElapsedTime" HorizontalAlignment="Stretch" Height="20" IsReadOnly="True"/>
                <Label Content="Pixels/s:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoPixelsPerSecond" HorizontalAlignment="Stretch" Height="20" IsReadOnly="True"/>
                <Label Content="Iterations/s:" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoIterationsPerSecond" HorizontalAlignment="Stretch" Height="20"  IsReadOnly="True"/>
                <Label Content="Iterations/Pixel Average:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoIterationsPerPixelAverage" HorizontalAlignment="Stretch" Height="20" IsReadOnly="True"/>
                <Label Content="Iterations/Pixel Minimum:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoIterationsPerPixelMinimum" HorizontalAlignment="Stretch" Height="20"  IsReadOnly="True"/>
                <Label Content="Iterations/Pixel Maximum:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoIterationsPerPixelMaximum" HorizontalAlignment="Stretch" Height="20"  IsReadOnly="True"/>
                <Label Content="FLOPS:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-2,0,0,-2"/>
                <TextBox x:Name="TextBoxInfoFLOPS" HorizontalAlignment="Stretch" Height="20" IsReadOnly="True"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
